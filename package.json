{
  "name": "template-bun",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun index.ts",
    "dev": "bun --watch index.ts",
    "get_name": "echo $npm_package_name",
    "docker_build": "docker build --pull -t $npm_package_name .",
    "docker_run": "docker run --env-file .env -d $npm_package_name --name $npm_package_name"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "zod": "^3.24.2"
  }
}
